<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@3.4.0/fonts/remixicon.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="styles.css" />
    <title>Dr. Physio Clinic</title>
  </head>
  <body>
    <header>
      <nav class="section__container nav__container">
        <div class="nav__logo">
          <a href="/"><img src="/assets/logo.png" alt="HealthCare Logo"></a>
        </div>
        <ul class="nav__links"> 
          <li class="link"><a href="/">Home</a></li>
          <li class="link"><a href="/about">About Us</a></li>
          <li class="link"><a href="/services">Services</a></li>
          <li class="link"><a href="/testimonials">Testimonials</a></li>
        </ul>
        <button id="toggleMenuBtn" class="btn toggle-menu-btn">Menu</button>
        <button class="btn contact-us-btn">
          <a href="/contact" style="color: aliceblue;">Contact Us</a>
        </button>
      </nav>
      <ul id="mobileMenu" class="mobile-menu">
        <li class="link"><a href="/">Home</a></li>
        <li class="link"><a href="/about">About Us</a></li>
        <li class="link"><a href="/services">Services</a></li>
        <li class="link"><a href="/testimonials">Testimonials</a></li>
      </ul>
    </header>

    <script>
      document.addEventListener("DOMContentLoaded", function() {
        const toggleMenuBtn = document.getElementById('toggleMenuBtn');
        const mobileMenu = document.getElementById('mobileMenu');
  
      toggleMenuBtn.addEventListener('click', function() {
        if (mobileMenu.style.display === 'block') {
          mobileMenu.style.display = 'none';
          document.body.style.overflow = ''; // Restore scroll behavior
        } else {
        mobileMenu.style.display = 'block';
        document.body.style.overflow = 'hidden'; // Prevent scrolling of page content
        }
      });
  
      // Prevent scrolling of page content when mobile menu is open
      mobileMenu.addEventListener('scroll', function(event) {
      event.stopPropagation();
      });
      });
    </script>
  </body>